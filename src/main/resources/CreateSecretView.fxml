<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" prefHeight="118.0" prefWidth="391.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gjvandersloot.mvvm.view.CreateSecretView">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="secretNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Value:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="secretValueField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button fx:id="createBtn" onAction="#onCreate" text="Create secret" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
