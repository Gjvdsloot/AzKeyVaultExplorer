<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" prefHeight="244.0" prefWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gjvandersloot.mvvm.view.WizardView">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="Client ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="clientIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Tenant ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="tenantIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Authentication" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <fx:define>
        <ToggleGroup fx:id="authToggleGroup"/>
    </fx:define>

    <!-- Auth radio buttons -->
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <RadioButton fx:id="secretRadio"
                     text="Secret"
                     toggleGroup="$authToggleGroup"
                     selected="true"/>
        <RadioButton fx:id="certRadio"
                     text="Certificate"
                     toggleGroup="$authToggleGroup"/>
    </HBox>

    <!-- Dynamic auth pane -->
    <StackPane fx:id="authStack" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <VBox fx:id="secretPane" spacing="10">
            <PasswordField promptText="Enter your client secret"/>
        </VBox>
        <VBox fx:id="certPane" spacing="10">
            <HBox spacing="10">
                <TextField fx:id="certPathField" promptText="Choose certificate..."/>
                <Button text="Browse"/>
            </HBox>
            <PasswordField promptText="Enter certificate password (optional)"/>
        </VBox>
    </StackPane>

    <Button fx:id="attachButton" text="Attach Vault" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
