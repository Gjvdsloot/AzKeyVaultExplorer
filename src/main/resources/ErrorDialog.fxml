<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="393.0" prefWidth="395.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gjvandersloot.controller.ErrorDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label text="Something went wrong" />
    <TextArea fx:id="errorField" disable="true" prefHeight="400.0" prefWidth="400.0" wrapText="true" VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
        <Button onAction="#confirm" text="OK" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#copy" text="Copy" wrapText="true" />
    </HBox>
</VBox>
