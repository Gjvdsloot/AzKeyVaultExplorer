<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<TabPane fx:controller="com.gjvandersloot.mvvm.view.TabView" xmlns="http://javafx.com/javafx"
         fx:id="tabPane"
         xmlns:fx="http://javafx.com/fxml"
         prefHeight="400.0" prefWidth="600.0">
        <Tab>
            <VBox prefHeight="291.0" prefWidth="454.0">
                <ToolBar style="-fx-background-color: #f0f0f0">
                    <Button fx:id="copy" onAction="#copySecret" text="Copy" />
                    <Button fx:id="show" onAction="#showSecret" text="Show" />
                    <Separator orientation="VERTICAL" />
                    <Button onAction="#addSecret" text="New" />
                    <Button mnemonicParsing="false" onAction="#delete" text="Delete" />
                    <Separator orientation="VERTICAL" />
                    <TextField fx:id="filterField" promptText="Search secret" />
                </ToolBar>
                <TableView fx:id="secretsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="secretsColumn" prefWidth="150" text="Secret name">
                            <cellValueFactory>
<!--                                <PropertyValueFactory property="secretName" />-->
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="secretValueColumn" prefWidth="200" text="Value">
                            <cellValueFactory>
<!--                                <PropertyValueFactory property="display" />-->
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
